@model TestProjectMVC.Models.Category

<form method="post" asp-action="Create">
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-info p1-3">Add Category</h2>
        </div>
        <div class="row">
            <div class="col-8">
                @*Name*@
                <div class="form-group row mt-3">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                @*Display Order*@
                <div class="form-group row mt-3">
                    <div class="col-4">
                        <label asp-for="DisplayOrder"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="DisplayOrder" class="form-control" />
                        <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row mt-3">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Create"/> 
                        </div>
                        <div class="col">
                            <a asp-action="index" class="btn btn-success w-100"><i class="fa-solid fa-right-from-bracket"></i>&nbsp; Back</a>
                        </div>
                    </div>
                    

                </div>
            </div>
            <div class="col-4">
                @*Empty*@
            </div>
        </div>

    </div>
</form>

@section Scripts{
    @{ <partial name ="_ValidationScriptsPartial"/>}
}
