@model TestProjectMVC.Models.VievModel.ProductVM

@{
    var title = "Create Product";
}

<form method="post" enctype="multipart/form-data">
    <div class="border p-3">
        @if (Model.Product.Id!=0)
        {
            title = "Edit Product";
            <input asp-for="Product.Id" hidden>
        }
        <input asp-for="Product.Id" hidden />
        <div class="form-group row">
            <h2 class="text-info p1-3">@title</h2>
        </div>
        <div class="row">
            <div class="col-8">
                @*Name*@
                <div class="form-group row mt-3">
                    <div class="col-4">
                        <label asp-for="Product.Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Product.Name" class="form-control" />
                        <span asp-validation-for="Product.Name" class="text-danger"></span>
                    </div>
                </div>
                @*Price*@
                <div class="form-group row mt-3">
                    <div class="col-4">
                        <label asp-for="Product.Price"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Product.Price" class="form-control" />
                        <span asp-validation-for="Product.Price" class="text-danger"></span>
                    </div>
                </div>
                    @*Description*@
                    <div class="form-group row mt-3">
                        <div class="col-4">
                        <label asp-for="Product.Description"></label>
                        </div>
                        <div class="col-8">
                          <textarea asp-for="Product.Description" class="form-control "></textarea>
                        <span asp-validation-for="Product.Description" class="text-danger"></span>
                        </div>
                    </div>
                @*Image*@
                    <div class="form-group row mt-3">
                        <div class="col-4">
                            Image
                        </div>
                        <div class="col-8">
                            <input type="file" name="files" id="uploadBox" multiple class="form-control" />
                        </div>
                    </div>
                @*Category drop down*@
                    <div class="form-group row mt-3">
                    <div class="col-4">
                        <label asp-for="Product.CategoryId"></label>
                    </div>
                        <div class="col-8">
                        <select asp-for="Product.CategoryId" asp-items="@Model.CategorySelectedList" class="form-control">
                            <option disabled selected>--Select Category--</option>
                            </select>
                            <span asp-validation-for="Product.CategoryId" class="text-danger"></span>
                        </div>
                    </div>

                <div class="form-group row">
                    <div class="col-8 offset-4 row mt-3">
                        <div class="col">
                            @if (Model.Product.Id != 0)
                            {
                                //Update
                                <input type="submit" class="btn btn-info w-100" value="Update" />
                            }
                            else
                            {
                                //Create
                                <input type="submit" onclick="return validateInput()" class="btn btn-primary w-100" value="Create" />
                            }
                            
                        </div>
                        <div class="col">
                            <a asp-action="index" class="btn btn-success w-100"><i class="fa-solid fa-right-from-bracket"></i>&nbsp; Back</a>
                        </div>
                    </div>


                </div>
            </div>
            <div class="col-3 ">
                <img src="@WebConstants.ImagePath@Model.Product.Image" width="100%"  />
        </div>

    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    <script>
        $(document).ready(function () {
            $('#summernote').summernote();
        });
        function validateInput(){
            if (document.getElementById("uploadBox").value==""){
                Swal.fire(
                    'Error!',
                    'Please upload an Image!',
                    'error'
                )
                return false;
            }
            return true
        }
        
    </script>
}

