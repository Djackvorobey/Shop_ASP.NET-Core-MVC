@* Application Type *@
<div class="container p-3">
    <div class="row pt-4">
        <div class="col -6">
            <h2 class="text-primary">Application Type List</h2>
        </div>
        <div class="col-6">
            <a asp-controller="ApplicationType" asp-action="Create" class="btn btn-primary">
                <i class="fa-solid fa-plus"></i>&nbsp; Create New Application Type
            </a>

        </div>
    </div>

    <br /> <br />
    @{IEnumerable<ApplicationType> objList = Model.objList;}
    @if (objList.Count() > 0)
    {
        <table class=" table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Application Type Name
                    </th>
                    
                    <th></th>

                </tr>
            </thead>
            <tbody>
                @foreach (var obj in objList)
                {
                    <tr>
                        <td width="50%">@obj.Name</td>
                        <td class="text-center">
                            <div class="btn-group">
                                <a asp-controller="ApplicationType" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2"><i class="fa-solid fa-pen-to-square"></i>&nbsp;</a>
                                <a asp-controller="ApplicationType" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2"><i class="fa-solid fa-delete-left"></i>&nbsp;</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p> No category exists</p>
    }

</div>

